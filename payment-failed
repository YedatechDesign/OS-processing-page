    <script>
        function retryPayment() {
            // Get submission_id from URL
            const urlParams = new URLSearchParams(window.location.search);
            const submissionId = urlParams.get('submission_id');
            
            if (submissionId) {
                // Redirect back to payment page with the same submission_id
                window.location.href = `https://yedatechdesign.github.io/0S-processing-page/payment.html?submission_id=${submissionId}`;
            } else {
                // If no submission_id, go back
                window.history.back();
            }
        }

        // Log for debugging
        window.addEventListener('load', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const submissionId = urlParams.get('submission_id');
            if (submissionId) {
                console.log('Failed payment for submission:', submissionId);
            }
        });
    </script>
